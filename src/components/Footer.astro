---
import Logo from "../assets/logo.png";
---

<footer class="w-full py-14">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <a href="/" class="flex justify-center">
        <img
          src={Logo.src}
          height="50"
          width="50"
          alt="Logo de Buñuelos Artesanales"
        />
      </a>
      <ul
        class="text-lg flex items-center justify-center flex-col gap-7 md:flex-row md:gap-12 transition-all duration-500 py-16 mb-10 border-b border-gray-200"
      >
        <li>
          <a href="/" class="text-gray-800 hover:text-gray-900">Inicio</a>
        </li>
        <li>
          <a href="/productos" class="text-gray-800 hover:text-gray-900"
            >Productos</a
          >
        </li>
        <li>
          <a href="/pedidos" class="text-gray-800 hover:text-gray-900"
            >Pedidos</a
          >
        </li>
        <li>
          <a href="/nosotros" class="text-gray-800 hover:text-gray-900"
            >Nosotros</a
          >
        </li>
        <li>
          <a href="/contacto" class="text-gray-800 hover:text-gray-900"
            >Contacto</a
          >
        </li>
      </ul>
      <div class="flex space-x-10 justify-center items-center mb-14">
        <a
          href="https://twitter.com/bunuelos"
          class="block text-gray-900 transition-all duration-500 hover:text-indigo-600"
          aria-label="Síguenos en Twitter"
        >
          <!-- Twitter SVG se mantiene igual -->
        </a>
        <a
          href="https://instagram.com/bunuelos"
          class="block text-gray-900 transition-all duration-500 hover:text-indigo-600"
          aria-label="Síguenos en Instagram"
        >
          <!-- Instagram SVG se mantiene igual -->
        </a>
        <a
          href="https://facebook.com/bunuelos"
          class="block text-gray-900 transition-all duration-500 hover:text-indigo-600"
          aria-label="Síguenos en Facebook"
        >
          <!-- Facebook SVG se mantiene igual -->
        </a>
        <a
          href="https://youtube.com/bunuelos"
          class="block text-gray-900 transition-all duration-500 hover:text-indigo-600"
          aria-label="Visita nuestro canal de YouTube"
        >
          <!-- YouTube SVG se mantiene igual -->
        </a>
      </div>
      <span class="text-lg text-gray-500 text-center block">
        ©2024 Buñuelos. Todos los derechos reservados.
        <a href="/privacidad" class="hover:text-indigo-600"
          >Política de Privacidad</a
        > |
        <a href="/cookies" class="hover:text-indigo-600">Política de Cookies</a>
      </span>
    </div>
  </div>
</footer>
