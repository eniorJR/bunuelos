---
import bun1 from "../assets/bun1.webp";
import bun2 from "../assets/bun2.webp";
import bun3 from "../assets/bun3.webp";
import bun4 from "../assets/bun4.jpg";
---

<section class="py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2
      class="font-manrope font-bold text-4xl text-black mb-8 max-xl:text-center"
    >
      Nuestros Buñuelos
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-8">
      <a
        href="/bunuelo/clasico"
        class="relative bg-cover group rounded-3xl bg-center overflow-hidden mx-auto sm:mr-0 xl:mx-auto cursor-pointer"
      >
        <img
          class="rounded-2xl object-cover h-64"
          src={bun1.src}
          alt="Buñuelo clásico con azúcar"
        />
        <div
          class="absolute z-10 bottom-3 left-0 mx-3 p-3 bg-white w-[calc(100%-24px)] rounded-xl shadow-sm shadow-transparent transition-all duration-500 group-hover:shadow-indigo-200 group-hover:bg-indigo-50"
        >
          <div class="flex items-center justify-between mb-2">
            <h6 class="font-semibold text-base leading-7 text-black">
              Buñuelo Clásico
            </h6>
            <h6
              class="font-semibold text-base leading-7 text-indigo-600 text-right"
            >
              2.50€
            </h6>
          </div>
          <p class="text-xs leading-5 text-gray-500">
            El dulce de toda la vida
          </p>
        </div>
      </a>

      <a
        href="/bunuelo/crema"
        class="relative bg-cover group rounded-3xl bg-center overflow-hidden mx-auto sm:ml-0 xl:mx-auto cursor-pointer"
      >
        <img
          class="rounded-2xl object-cover h-64"
          src={bun2.src}
          alt="Buñuelo relleno de crema"
        />
        <div
          class="absolute z-10 bottom-3 left-0 mx-3 p-3 bg-white w-[calc(100%-24px)] rounded-xl shadow-sm shadow-transparent transition-all duration-500 group-hover:shadow-indigo-200 group-hover:bg-indigo-50"
        >
          <div class="flex items-center justify-between mb-2">
            <h6 class="font-semibold text-base leading-7 text-black">
              Buñuelo de Crema
            </h6>
            <h6
              class="font-semibold text-base leading-7 text-indigo-600 text-right"
            >
              3.00€
            </h6>
          </div>
          <p class="text-xs leading-5 text-gray-500">
            Relleno de crema pastelera
          </p>
        </div>
      </a>

      <a
        href="/bunuelo/nata"
        class="relative bg-cover group rounded-3xl bg-center overflow-hidden mx-auto sm:mr-0 xl:mx-auto cursor-pointer"
      >
        <img
          class="rounded-2xl object-cover h-64"
          src={bun3.src}
          alt="Buñuelo relleno de nata"
        />
        <div
          class="absolute z-10 bottom-3 left-0 mx-3 p-3 bg-white w-[calc(100%-24px)] rounded-xl shadow-sm shadow-transparent transition-all duration-500 group-hover:shadow-indigo-200 group-hover:bg-indigo-50"
        >
          <div class="flex items-center justify-between mb-2">
            <h6 class="font-semibold text-base leading-7 text-black">
              Buñuelo de Nata
            </h6>
            <h6
              class="font-semibold text-base leading-7 text-indigo-600 text-right"
            >
              3.00€
            </h6>
          </div>
          <p class="text-xs leading-5 text-gray-500">
            Con nata montada natural
          </p>
        </div>
      </a>

      <a
        href="/bunuelo/chocolate"
        class="relative bg-cover group rounded-3xl bg-center overflow-hidden mx-auto sm:ml-0 xl:mx-auto cursor-pointer"
      >
        <img
          class="rounded-2xl object-cover h-64"
          src={bun4.src}
          alt="Buñuelo relleno de chocolate"
        />
        <div
          class="absolute z-10 bottom-3 left-0 mx-3 p-3 bg-white w-[calc(100%-24px)] rounded-xl shadow-sm shadow-transparent transition-all duration-500 group-hover:shadow-indigo-200 group-hover:bg-indigo-50"
        >
          <div class="flex items-center justify-between mb-2">
            <h6 class="font-semibold text-base leading-7 text-black">
              Buñuelo de Cacao
            </h6>
            <h6
              class="font-semibold text-base leading-7 text-indigo-600 text-right"
            >
              3.00€
            </h6>
          </div>
          <p class="text-xs leading-5 text-gray-500">
            Relleno de chocolate belga
          </p>
        </div>
      </a>
    </div>
  </div>
</section>
