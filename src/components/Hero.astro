---
import bun1 from "../assets/bun1.webp";
import Logo from "../assets/logo.png";
---

<div class="bg-white pb-6 sm:pb-8 lg:pb-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8 py-5">
    <header class="flex items-center justify-between mb-5">
      <!-- logo - start -->
      <a
        href="/"
        class="inline-flex items-center gap-2.5 text-2xl font-bold text-black md:text-3xl"
        aria-label="logo"
      >
        <img src={Logo.src} loading="lazy" alt="Logo" class="h-10 w-10" />

        Buñuelos
      </a>
      <!-- logo - end -->

      <!-- nav - start -->
      <nav class="hidden gap-12 lg:flex">
        <a href="#" class="text-lg font-semibold text-indigo-500">Inicio</a>
        <a
          href="/shop#products"
          class="text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700"
          >Productos</a
        >
        <a
          href="/shop/order"
          class="text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700"
          >Pedidos</a
        >
        <a
          href="/about/"
          class="text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700"
          >Nosotros</a
        >
      </nav>
      <!-- nav - end -->

      <!-- buttons - start -->
      <a
        href="/shop/"
        class="hidden rounded-lg bg-gray-200 px-8 py-3 text-center text-sm font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-base lg:inline-block"
        >Pedir ya</a
      >

      <button
        id="mobile-menu-button"
        type="button"
        class="inline-flex items-center gap-2 rounded-lg bg-gray-200 px-2.5 py-2 text-sm font-semibold text-gray-500 ring-indigo-300 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-base lg:hidden"
        aria-label="Toggle menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h6a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
            clip-rule="evenodd"></path>
        </svg>

        Menu
      </button>
      <!-- buttons - end -->
    </header>

    <!-- Mobile menu - start -->
    <div id="mobile-menu" class="lg:hidden hidden">
      <nav
        class="flex flex-col items-center py-4 space-y-4 border-t border-gray-200"
      >
        <a href="/" class="text-lg font-semibold text-indigo-500">Inicio</a>
        <a
          href="/shop#products"
          class="text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700"
          >Productos</a
        >
        <a
          href="/shop/order"
          class="text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700"
          >Pedidos</a
        >
        <a
          href="/about/"
          class="text-lg font-semibold text-gray-600 transition duration-100 hover:text-indigo-500 active:text-indigo-700"
          >Nosotros</a
        >
        <a
          href="/shop/"
          class="inline-block rounded-lg bg-gray-200 px-8 py-3 text-center text-sm font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-base"
          >Pedir ya</a
        >
      </nav>
    </div>
    <!-- Mobile menu - end -->

    <section
      class="flex flex-col justify-between gap-6 sm:gap-8 md:gap-14 lg:flex-row px-6"
    >
      <!-- content - start -->
      <div
        class="flex flex-col justify-center sm:text-center lg:py-12 lg:text-left xl:w-6/12 xl:py-24"
      >
        <p
          class="mb-4 font-semibold text-indigo-500 md:mb-6 md:text-lg xl:text-xl"
        >
          Los más deliciosos
        </p>

        <h1
          class="mb-8 text-4xl font-bold text-black sm:text-5xl md:mb-12 md:text-6xl"
        >
          Maestros Artesanos del <strong>Buñuelo Tradicional</strong>
        </h1>

        <p
          class="mb-8 leading-relaxed text-gray-500 md:mb-12 lg:w-4/5 xl:text-lg"
        >
          Desde 1990 elaborando los mejores <strong>buñuelos artesanales</strong
          > de España. Descubre nuestra selección de sabores tradicionales y modernos,
          disponibles para entrega en toda la península. Especialistas en grandes
          pedidos y eventos.
        </p>

        <div
          class="flex flex-col gap-2.5 sm:flex-row sm:justify-center lg:justify-start"
        >
          <a
            href="/shop"
            class="inline-block rounded-lg bg-indigo-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700 md:text-base"
            >Hacer pedido</a
          >

          <a
            href="/shop#products"
            class="inline-block rounded-lg bg-gray-200 px-8 py-3 text-center text-sm font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-base"
            >Ver productos</a
          >
        </div>
      </div>
      <!-- content - end -->

      <!-- image - start -->
      <div
        class="h-48 overflow-hidden rounded-3xl bg-gray-100 shadow-lg lg:h-[42rem] xl:w-5/12"
      >
        <img
          src={bun1.src}
          loading="lazy"
          alt="Photo by Fakurian Design"
          class="h-full w-full object-cover object-center"
        />
      </div>
      <!-- image - end -->
    </section>
  </div>
</div>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      // Toggle the mobile menu visibility
      mobileMenu.classList.toggle("hidden");
    });

    // Close mobile menu when clicking outside
    document.addEventListener("click", (event) => {
      if (
        !mobileMenu.contains(event.target) &&
        !mobileMenuButton.contains(event.target) &&
        !mobileMenu.classList.contains("hidden")
      ) {
        mobileMenu.classList.add("hidden");
      }
    });
  }
</script>
